# Azure Infrastructure Composer - Environment Variables
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# Default Azure region/location for resources
AZURE_LOCATION=westeurope

# Allowed CORS origins (comma-separated or * for all)
CORS_ALLOW_ORIGINS=*

# Pulumi State Directory (where Pulumi stores state files)
# Windows: C:\path\to\pulumi-state
# Linux/Mac: /home/user/pulumi-state
# Relative: ./pulumi-state
PULUMI_STATE_DIR=./pulumi-state

# Pulumi Home Directory
PULUMI_HOME=~/.pulumi

# Pulumi Work Directory
PULUMI_WORK_DIR=./pulumi-work

# Pulumi Secrets Provider
PULUMI_SECRETS_PROVIDER=passphrase

# Pulumi Config Passphrase (change in production!)
PULUMI_CONFIG_PASSPHRASE=local-dev-only
